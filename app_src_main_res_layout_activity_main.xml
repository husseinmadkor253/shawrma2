<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ImageView
        android:contentDescription="@string/app_name"
        android:id="@+id/sh_awrma"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:src="@drawable/shawrma"
        android:layout_marginRight="0dp"
        android:layout_marginEnd="0dp"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/text1sh_awrma"
        android:text="@string/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="70sp"
        android:textStyle="bold"
        android:textColor="#0d0d0d"
        android:layout_below="@id/sh_awrma"
        android:background="#e0e070"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"

        />
    <TextView
        android:id="@+id/text2sh_awrma"
        android:text="@string/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textStyle="italic"
        android:textColor="#b2b266"
        android:layout_below="@id/text1sh_awrma"
        android:background="#5c0038"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"


        />
    <TextView
        android:id="@+id/text3sh_awrma"
        android:text="@string/text3"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="#b2b266"
        android:layout_below="@id/text2sh_awrma"
        android:background="#5c0038"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"


        />

    <TextView
        android:text="@string/text4"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#b2b266"
        android:layout_below="@id/text3sh_awrma"
        android:background="#5c0038"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"

        />
    <TextView
        android:text="@string/text5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="34sp"
        android:textStyle="italic"
        android:textColor="#000000"
        android:layout_below="@id/text2sh_awrma"
        android:layout_toRightOf="@id/text3sh_awrma"
        android:layout_toEndOf="@id/text3sh_awrma"
        android:background="#C0C0C0"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"

        />
    <TextView
        android:text="@string/text6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:textStyle="italic"
        android:textColor="#000000"
        android:layout_below="@id/text3sh_awrma"
        android:layout_toRightOf="@id/text3sh_awrma"
        android:layout_toEndOf="@id/text3sh_awrma"
        android:background="	#D3D3D3"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"

        />
</RelativeLayout>